{
    "appId": "org.city-chain.hub",
    "artifactName": "City.Hub-${version}-${os}-${arch}.${ext}",
    "productName": "City Hub",
    "asar": true,
    "publish": [
        {
            "provider": "github",
            "owner": "CityChainFoundation",
            "repo": "city-hub"
        }
    ],
    "releaseInfo": {
        "releaseName": "City Hub"
    },
    "files": [
        "www/**",
        "main.js"
    ],
    "directories": {
        "output": "build"
    },
    "win": {
        "icon": "www/assets/icon.ico",
        "target": [
            "nsis"
        ],
        "artifactName": "City.Hub-${version}-${os}-${env.arch}.${ext}"
    },
    "linux": {
        "icon": "www/assets/images/",
        "target": [
            "AppImage:x64"
        ],
        "synopsis": "City Hub is your hub into everything on City Chain and the Smart City Platform.",
        "category": "Utility"
    },
    "mac": {
        "icon": "www/assets/icon.icns",
        "target": [
            "dmg",
            "zip"
        ],
        "category": "public.app-category.productivity"
    },
    "dmg": {
        "contents": [
            {
                "x": 110,
                "y": 150
            },
            {
                "x": 240,
                "y": 150,
                "type": "link",
                "path": "/Applications"
            }
        ]
    },
    "nsis": {
        "oneClick": false,
        "perMachine": true,
        "allowToChangeInstallationDirectory": true,
        "deleteAppDataOnUninstall": true,
        "guid": "42ba105c-858b-41cc-94bc-2b8c5ee5c6b4",
        "createDesktopShortcut": true,
        "createStartMenuShortcut": true,
        "license": "www/assets/license.txt"
    },
    "msi": {
        "warningsAsErrors": false
    },
    "extraResources": [
        "daemon/**/*",
        "www/assets/icon-tray.ico",
        "www/assets/license.txt"
    ]
}
